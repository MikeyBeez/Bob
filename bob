#!/bin/bash
# Bob Launcher - Using uv and virtual environment

echo "ü§ñ Starting Bob - LLM-as-Kernel Intelligence System..."

cd ~/Bob

# Activate virtual environment if it exists
if [ -d ".venv" ]; then
    source .venv/bin/activate
fi

# Try the full Bob first, with fallback to simple version
if python3 -c "import aiohttp" 2>/dev/null; then
    echo "‚úÖ Full dependencies available - starting advanced Bob..."
    python3 bob.py
elif python3 -c "import subprocess" 2>/dev/null; then
    echo "‚ö° Using simple Bob interface (no complex dependencies needed)..."
    python3 bob_simple.py
else
    echo "‚ùå Python issues. Falling back to chat interface..."
    node bob_chat_repl.js
fi
